    :javascript
      $(document).ready(function() {
        var highlightedWord = "contains";
        var myCodeMirror = CodeMirror(document.getElementById("code", {
            mode: "text/x-ruby",
            tabMode: "indent",
            matchBrackets: true,
            indentUnit: 4
          }));
        $("#code").bind("keyup", function (e) {
          console.log(myCodeMirror.getValue());
        })
      });
